{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "ES6",
            "DOM"
        ],
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "app/**/*"
, "index.ts"    ],
    "exclude": [
        "node_modules",
        "spec",
        "build"
    ]
}